# Simplified Environment Setup for Fast Chat
# Copy this to .env.local for development or .env.production for production

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/nexus_chat"

# JWT Configuration (REQUIRED - generate a secure random string)
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters-long"

# Redis Configuration (for horizontal scaling and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=development
PORT=3000

# Frontend URLs (for CORS - add your frontend domains)
FRONTEND_URLS=http://localhost:3001,http://localhost:3000

# Optional: Logging level
LOG_LEVEL=info

# Optional: Rate limiting (messages per minute per user)
RATE_LIMIT_MESSAGES_PER_MINUTE=100

# Optional: WebSocket configuration
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
